{
  "compilerOptions": {
    "types": [ "node", "react" ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "jsx": "react",
    "target": "es2016",
    "lib": ["es7", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [ "front/app/*" ],
      "@lesson/*": [ "front/lesson/*" ],
      "@courses/*": [ "front/courses/*" ],
      "@views/*": [ "front/views/*" ],
      "@shared/*": [ "front/shared/*" ],
      "@applicationTypes": [ "front/_types/index" ],
      "@appTypes": [ "front/app/_types/index" ],
      "@lessonTypes": [ "front/lesson/_types/index" ],
      "@coursesTypes": [ "front/courses/_types/index" ],
      "@viewsTypes": [ "front/views/_types/index" ],
      "@sharedTypes": [ "front/shared/_types/index" ],
      "@appForm/*": [ "front/app/_forms/Form/*" ],
      "@constants": [ "front/constants" ],
      "@constantsStyles": [ "front/theme/constants" ],
      "@appStore": [ "front/store" ],
      "@theme": [ "front/theme/index" ],
      "@src/*": [ "front/*" ],
      "@forms/*": [ "front/app/_forms/*" ],
    },
    "resolveJsonModule": true
  }
}
