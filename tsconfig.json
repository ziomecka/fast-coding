{
  "compilerOptions": {
    // "alwaysStrict": true,
    "module": "esnext",
    // "module": "commonjs",
    "types": [ "node", "react" ],
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "jsx": "react",
    "target": "es2016",
    // "noFallthroughCasesInSwitch": true,
    // "noImplicitAny": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noUnusedLocals": true,
    "pretty": true,
    // "removeComments": true,
    // "skipLibCheck": true,
    "sourceMap": true,
    // "strictNullChecks": true,
    "lib": ["es7", "dom"],
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": [ "src/app/*" ],
      "@components/*": [ "src/components/*" ],
      "@views/*": [ "src/views/*" ],
      "@shared/*": [ "src/shared/*" ],
      "@applicationTypes": [ "src/_types/index" ],
      "@appTypes": [ "src/app/_types/index" ],
      "@componentsTypes": [ "src/components/_types/index" ],
      "@viewsTypes": [ "src/views/_types/index" ],
      "@sharedTypes": [ "src/shared/_types/index" ],
      "@appForm/*": [ "src/app/_forms/Form/*" ],
      "@constants": [ "src/constants" ],
      "@constantsStyles": [ "src/theme/constants" ],
      "@appStore": [ "src/store" ],
      "@theme": [ "src/theme/index" ],
      "@src/*": [ "src/*" ],
      "@forms/*": [ "src/app/_forms/*" ],
    },
    "resolveJsonModule": true
  }
}
